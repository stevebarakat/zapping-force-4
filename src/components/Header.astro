---
import { SITE_TITLE } from "../consts";
import ThemeToggle from "./ThemeToggle.jsx";
import SocialLinks from "./SocialLinks.astro";
---

<header>
  <nav>
    <div class="theme-toggle">
      <ThemeToggle client:load />
    </div>
    <h2><a href="/">{SITE_TITLE}</a></h2>
    <SocialLinks />
  </nav>
</header>
<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: white;
    box-shadow: var(--box-shadow);
    position: sticky;
    top: 0;
    z-index: 100;
  }
  :global(.dark) header {
    background: var(--bg-color);
  }
  h2 {
    margin: 0;
    font-size: clamp(1em, 2.5vw, 1.2em);
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1em;
    max-width: 960px;
    margin: 0 auto;
  }
  .internal-links {
    display: flex;
    gap: 1em;
  }
  .theme-toggle {
    display: flex;
    align-items: center;
  }
  .social-links,
  .social-links a {
    display: flex;
  }
  @media (max-width: 720px) {
    header {
      padding: 0 0.5em;
    }
    nav {
      padding: 0.75em;
    }
    .social-links {
      display: none;
    }
  }
</style>
